[core]
    editor = vim

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = icdiff -N $LOCAL $REMOTE

[merge]
    tool = meld
    conflictstyle = diff3

[mergetool "meld"]
    cmd = meld --auto-merge -o "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true

[mergetool]
    keepBackup = false

[alias]
    up = "!git fetch --all -p; git merge --ff-only @{u}"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
